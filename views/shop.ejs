<!doctype html>
<html lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>


<style>
  .grid {
   width: 95%;
   margin-left: 30px;
  display: grid;
  grid-template-columns: repeat(3, 10fr); 
  gap: 15px;
  padding-top: 20px;
}
.card__actions {
  display: flex;
  justify-content: center;
  margin-top: 10px; 
}

</style>

<body>
        <header>
        <nav class="navbar navbar-expand-lg bg-danger">
           <div class="container">
               <a class="navbar-brand" href="#"></a>
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPrimary" aria-controls="navbarPrimary" aria-expanded="false" aria-label="Toggle navigation">
                   <span class="navbar-toggler-icon"></span>
               </button>
               <div class="collapse navbar-collapse" id="navbarPrimary">

                <ul class="navbar-nav me-auto mb-3 mb-lg-0 ">
                    <li class="nav-item "><a class="nav-link" href="/" style="text-decoration: none; color:white; margin-left: 20px;">SmatPhone</a></li>
                    <li class="nav-item"><a class="nav-link" href="admin/products" style="text-decoration: none; color:white; margin-left: 20px;">Thêm sản phẩm</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="margin-left: 20px">
                          danh mục sản phẩm
                        </a>
                        <ul class="dropdown-menu">
                            <% for(let cate of dataCate){ %>
                              <li class="nav-item">
                                <a class="active" style="color: rgb(255, 0, 0); text-decoration: none; margin-left: 30px;" href="/shop/<%= cate.id %>">
                                  <%= cate.name %>
                                </a>
                              </li> 

                            <% } %> 
                          </ul>


                        </ul>
                    </li>
                </ul>
                   <form class="d-flex" role="search">
                       <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                       <button class="btn btn-outline btn bg-light" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search-heart" viewBox="0 0 16 16">
                        <path d="M6.5 4.482c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.69 0-5.018"/>
                        <path d="M13 6.5a6.47 6.47 0 0 1-1.258 3.844q.06.044.115.098l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1-.1-.115h.002A6.5 6.5 0 1 1 13 6.5M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11"/>
                        </svg>
                    </button>
                   </form>
               </div>
           </div>
       </nav>
        </header>  
                <main>
                <div class="grid">
                    <% for (let pro of dataPro) { %>
                    <article class="card product-item">
                    <header class="card__header text-center">
                    <h1 class="product__title"><%= pro.name %></h1>
                    </header>
                    <div class="card__image image-center">
                    <img src="/images/<%= pro.image %>" style="width: 40%; margin-left: 130px;" alt="">
                    </div>  
                    <div class="card__content text-center">
                    <h2 class="product__price"><%=  pro.price %>đ</h2>
                    <p class="product__description"><%= pro.content %></p>
                    </div>
                    <div class="card__actions">
                    <button class="btn btn-danger">Add to Cart</button>
                    </div>
                    </article>
                    <% } %>
                </div>
                    
            </main>  
        <footer>
            <!-- place footer here -->
        </footer>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
